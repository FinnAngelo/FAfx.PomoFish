<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <configSections>
    <sectionGroup name="common">
      <section name="logging" type="Common.Logging.ConfigurationSectionHandler, Common.Logging" />
    </sectionGroup>

    <sectionGroup name="userSettings" type="System.Configuration.UserSettingsGroup, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" >
      <section name="FinnAngelo.PomoFish.Properties.Settings" type="System.Configuration.ClientSettingsSection, System, Version=4.0.0.0, Culture=neutral, PublicKeyToken=b77a5c561934e089" allowExeDefinition="MachineToLocalUser" requirePermission="false" />
    </sectionGroup>
  </configSections>

  <startup>
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
  </startup>

  <!-- http://netcommon.sourceforge.net/docs/2.1.0/reference/html/ch01.html -->
  <common>
    <logging>
      <factoryAdapter type="Common.Logging.NLog.NLogLoggerFactoryAdapter, Common.Logging.NLog31">
        <arg key="configType" value="FILE" />
        <arg key="configFile" value="~/NLog.config" />
      </factoryAdapter>
    </logging>
  </common>
  
  <userSettings>
    <FinnAngelo.PomoFish.Properties.Settings>
      <setting name="WorkingPeriodInMinutes" serializeAs="String">
        <value>25</value>
      </setting>
      <setting name="RestPeriodInMinutes" serializeAs="String">
        <value>5</value>
      </setting>
      <setting name="PlaySound" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="TakeSnapshots" serializeAs="String">
        <value>True</value>
      </setting>
      <setting name="SnapshotPeriodInSeconds" serializeAs="String">
        <value>60</value>
      </setting>
    </FinnAngelo.PomoFish.Properties.Settings>
  </userSettings>
  
</configuration>